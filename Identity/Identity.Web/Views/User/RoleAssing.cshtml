@model List<RoleAssingModel>
@{
    ViewData["Title"] = "RoleAssing";
}

<h1>Role Assing</h1>

<form asp-controller="User" asp-action="RoleAssing" method="post">
    <table class="table">
        <thead>
            <tr>
                <th>
                </th>
                <th>
                    Role Name
                </th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td><input type="checkbox" asp-for="@Model[i].HasAssign" /> </td>
                    <td>
                        @Model[i].RoleName
                        <input type="hidden" asp-for="@Model[i].RoleId" />
                        <input type="hidden" asp-for="@Model[i].RoleName" />
                    </td>
                </tr>
            }
            <tr>
                <td colspan="2">
                    <button>Rol Ata</button>
                </td>
            </tr>
        </tbody>
    </table>


</form>

