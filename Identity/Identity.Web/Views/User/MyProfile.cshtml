@model AppUser
@{
    ViewData["Title"] = "MyProfile";
}

<h1>My Profile</h1>

@if (TempData["Sucess"] != null)
{
    <div class="alert alert-success">@TempData["Sucess"].ToString()</div>
}

@if (TempData["EmailNotConfirm"] != null)
{
    <div class="alert alert-danger">@TempData["EmailNotConfirm"].ToString()</div>
}

@if (TempData["EmailNotConfirmSucess"] != null)
{
    <div class="alert alert-success">@TempData["EmailNotConfirmSucess"].ToString()</div>
}




<div class="container row">
    <div class="col-lg-4">
        <div class="card mb-4">
            <div class="card-body text-center">
                @*@if (string.IsNullOrEmpty(Model.Picture) || string.IsNullOrWhiteSpace(Model.Picture))
                {
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar"
                class="rounded-circle img-fluid" style="width: 150px;">
                }
                else
                {
                <img src="~/Picture/@Model.Picture" alt="avatar"
                class="rounded-circle img-fluid" style="width: 150px;">
                }*@

                <user-picture-tag-halper picture="@Model.Picture" class="rounded"></user-picture-tag-halper>

                <h5 class="my-3">@Model.UserName</h5>
                <p class="text-muted mb-1">Full Stack Developer</p>
                <p class="text-muted mb-4">Bay Area, San Francisco, CA</p>
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        <div class="card mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-3">
                        <p class="mb-0">Full Name</p>
                    </div>
                    <div class="col-sm-9">
                        <p class="text-muted mb-0">@Model.UserName</p>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <p class="mb-0">Email</p>
                    </div>
                    <div class="col-sm-9">
                        <p class="text-muted mb-0">@Model.Email</p>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <p class="mb-0">Phone</p>
                    </div>
                    <div class="col-sm-9">
                        @if (Model.PhoneNumber != null)
                        {
                            <p class="text-muted mb-0">@Model.PhoneNumber</p>
                        }
                        else
                        {
                            <p class="text-muted mb-0">-</p>
                        }

                    </div>
                </div>
                <hr>
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <p class="mb-0">Address</p>
                    </div>
                    <div class="col-sm-9">
                        <p class="text-muted mb-0">Bay Area, San Francisco, CA</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div>
                <a class="btn btn-primary" href="/User/ChangePassword">Şifre Değiştir</a>
                <a class="btn btn-secondary" href="/User/EditUser/@Model.Id">Bilgileri Güncelle</a>

            </div>
        </div>

    </div>


</div>

@section Scripts
    {
    <script>
        $(document).ready(function () {
            setTimeout(function () {
                $(".alert").alert('close');
            }, 5000);
        });

    </script>

}

