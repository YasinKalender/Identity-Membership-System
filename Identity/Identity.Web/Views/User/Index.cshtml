@model List<AppUser>

@{
    ViewData["Title"] = "Index";
}

@if (Model.Count() == 0)
{
    <div class="alert alert-danger">Kullanıcı Bulunamadı..</div>
}
else
{
    <div class="container">
        <table class="table table-bordered">
            <tr>
                <th>UserName</th>
                <th>Email</th>
                <th>Roller</th>
                <th></th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.UserName</td>
                    <td>@item.Email</td>
                    <td user-roles="@item.Id"></td>
                    <td><a class="btn btn-secondary" asp-route-Id="@item.Id" asp-action="RoleAssing">Rol Ata</a></td>
                    <td><a class="btn btn-info" asp-route-Id="@item.Id" asp-action="ResetPasswordUser">Şifresini değiştir</a></td>
                </tr>
            }

        </table>
    </div>
}

