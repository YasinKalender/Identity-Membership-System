@model ForgetPasswordModel
@{
    ViewData["Title"] = "ResetPassword";
}

<h1>Forget Password</h1>

<form asp-controller="User" asp-action="ForgetPassword" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    else
    {
        <div class="alert alert-info">Please enter email to password rest</div>
    }

    <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input type="email" class="form-control" asp-for="Email" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

