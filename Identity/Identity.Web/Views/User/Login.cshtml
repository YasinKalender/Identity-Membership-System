@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>


<form asp-controller="User" asp-action="Login" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input type="email" class="form-control" asp-for="Email" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="password" class="form-control" asp-for="Password" id="exampleInputPassword1" placeholder="Password">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" asp-for="RememberMe">
        <label class="form-check-label" asp-for="RememberMe">Remember Me</label>
    </div>

    <a asp-action="ForgetPassword" asp-controller="User">Şifremi Unuttum?</a>

    <a asp-action="FacebookLogin" asp-controller="SocailMedia" class="btn btn-primary">Facebook ile giriş yap</a>
    <a asp-action="GoogleLogin" asp-controller="SocailMedia" class="btn btn-secondary">Google ile giriş yap</a>
    <a asp-action="MicrosoftLogin" asp-controller="SocailMedia" class="btn btn-info">Microsoft ile giriş yap</a>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

