@model ResetPasswordModel
@{
    ViewData["Title"] = "ResetPassword";
}

<h1>Reset Password</h1>

<form asp-controller="User" asp-action="ResetPassword" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="password" class="form-control" asp-for="Password" id="exampleInputPassword1" placeholder="Password">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="password" class="form-control" asp-for="ConfirmPassword" id="exampleInputPassword1" placeholder="Password">
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

